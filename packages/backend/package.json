{
  "name": "@garcon/backend",
  "version": "1.0.0",
  "description": "Backend microservices for Gar√ßon app",
  "main": "dist/index.js",
  "scripts": {
    "dev": "nodemon src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:security": "jest --testPathPattern=security --verbose",
    "test:performance": "jest --testPathPattern=performance --verbose --runInBand",
    "test:security-performance": "ts-node src/__tests__/security-performance-runner.ts",
    "test:penetration": "jest --testPathPattern=penetrationTests.test.ts --verbose",
    "test:vulnerability": "jest --testPathPattern=vulnerabilityScans.test.ts --verbose",
    "test:load": "jest --testPathPattern=loadTests.test.ts --verbose --runInBand",
    "test:benchmark": "jest --testPathPattern=benchmarks.test.ts --verbose --runInBand"
  },
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "jsonwebtoken": "^9.0.1",
    "bcryptjs": "^2.4.3",
    "pg": "^8.11.1",
    "redis": "^4.6.7",
    "socket.io": "^4.7.2",
    "joi": "^17.9.2",
    "winston": "^3.10.0",
    "compression": "^1.7.4",
    "rate-limiter-flexible": "^2.4.2"
  },
  "devDependencies": {
    "@types/express": "^4.17.17",
    "@types/cors": "^2.8.13",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/bcryptjs": "^2.4.2",
    "@types/pg": "^8.10.2",
    "@types/compression": "^1.7.2",
    "@types/node": "^20.4.5",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "jest": "^29.6.1",
    "@types/jest": "^29.5.3",
    "ts-jest": "^29.1.1",
    "supertest": "^6.3.3",
    "@types/supertest": "^2.0.12",
    "jest-junit": "^16.0.0"
  }
}