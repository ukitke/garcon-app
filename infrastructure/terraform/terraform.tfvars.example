# AWS Configuration
aws_region = "us-east-1"
environment = "production"
project_name = "garcon-app"

# Network Configuration
vpc_cidr = "10.0.0.0/16"

# Database Configuration
database_instance_class = "db.t3.medium"
db_username = "garcon_admin"
# db_password = "your-secure-password-here" # Set via environment variable or secrets

# Cache Configuration
redis_node_type = "cache.t3.micro"

# ECS Configuration
ecs_cpu = 512
ecs_memory = 1024
min_capacity = 2
max_capacity = 10

# Domain Configuration
domain_name = "api.garcon-app.com"
# certificate_arn = "arn:aws:acm:us-east-1:123456789012:certificate/12345678-1234-1234-1234-123456789012" # Set via environment variable

# Scaling Configuration (optional overrides)
# min_capacity = 3
# max_capacity = 20
